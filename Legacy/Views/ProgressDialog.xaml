<Window x:Class="SolutionGrader.Legacy.Views.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đang xử lý" Height="150" Width="350"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        ShowInTaskbar="False">
    <Grid Margin="10">
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="txtStatus" Text="Đang dừng middleware..."
                       FontWeight="Bold"
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            <ProgressBar x:Name="progressBar" Height="20" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="txtCountdown"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>