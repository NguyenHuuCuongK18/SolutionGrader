<Window x:Class="SolutionGrader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Solution Grader" Height="700" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Configuration" Grid.Row="0" Padding="5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Content="Client Executable:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Config.ClientPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="0" Grid.Column="1" Margin="5"/>
                <Button Content="Browse..." Command="{Binding BrowseClientCommand}" Grid.Row="0" Grid.Column="2" Margin="5" Padding="10,2"/>

                <Label Content="Server Executable:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Config.ServerPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Grid.Column="1" Margin="5"/>
                <Button Content="Browse..." Command="{Binding BrowseServerCommand}" Grid.Row="1" Grid.Column="2" Margin="5" Padding="10,2"/>

                <Label Content="Client AppSettings:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Config.ClientAppSettingsPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Grid.Column="1" Margin="5"/>
                <Button Content="Browse..." Command="{Binding BrowseClientAppSettingsCommand}" Grid.Row="2" Grid.Column="2" Margin="5" Padding="10,2"/>

                <Label Content="Server AppSettings:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Config.ServerAppSettingsPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="3" Grid.Column="1" Margin="5"/>
                <Button Content="Browse..." Command="{Binding BrowseServerAppSettingsCommand}" Grid.Row="3" Grid.Column="2" Margin="5" Padding="10,2"/>

                <Label Content="Test Suite:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Config.SuitePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="4" Grid.Column="1" Margin="5"/>
                <StackPanel Grid.Row="4" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="File..." Command="{Binding BrowseSuiteFileCommand}" Margin="5" Padding="10,2"/>
                    <Button Content="Folder..." Command="{Binding BrowseSuiteFolderCommand}" Margin="5" Padding="10,2"/>
                </StackPanel>

                <Label Content="Ignore File:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Config.IgnoreFilePath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="5" Grid.Column="1" Margin="5"/>
                <Button Content="Browse..." Command="{Binding BrowseIgnoreFileCommand}" Grid.Row="5" Grid.Column="2" Margin="5" Padding="10,2"/>
                <Label Content="Database Script:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Config.DatabaseScriptPath, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="6" Grid.Column="1" Margin="5"/>
                <Button Content="Browse..." Command="{Binding BrowseDatabaseScriptCommand}" Grid.Row="6" Grid.Column="2" Margin="5" Padding="10,2"/>

                <Label Content="Results Directory:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Config.ResultsDirectory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="7" Grid.Column="1" Margin="5"/>
                <Button Content="Browse..." Command="{Binding BrowseResultsDirectoryCommand}" Grid.Row="7" Grid.Column="2" Margin="5" Padding="10,2"/>

                <Label Content="Protocol:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center"/>
                <TextBox Text="{Binding Config.Protocol}" Grid.Row="8" Grid.Column="1" Margin="5" IsReadOnly="True"/>
            </Grid>
        </GroupBox>

        <TabControl Grid.Row="1" Margin="0,10,0,0">
            <TabItem Header="Test Steps">
                <DataGrid ItemsSource="{Binding TestSteps}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Step" Binding="{Binding Step}" Width="Auto"/>
                        <DataGridTextColumn Header="Input" Binding="{Binding Input}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Result" Binding="{Binding Result}" Width="2*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Student Output (Client)">
                <DataGrid ItemsSource="{Binding StudentOutputClient}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Stage" Binding="{Binding Stage}"/>
                        <DataGridTextColumn Header="Method" Binding="{Binding Method}"/>
                        <DataGridTextColumn Header="DataResponse" Binding="{Binding DataResponse}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="StatusCode" Binding="{Binding StatusCode}"/>
                        <DataGridTextColumn Header="Output" Binding="{Binding Output}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="DataType" Binding="{Binding DataTypeMiddleWare}"/>
                        <DataGridTextColumn Header="ByteSize" Binding="{Binding ByteSize}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
            <TabItem Header="Student Output (Server)">
                <DataGrid ItemsSource="{Binding StudentOutputServer}" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Stage" Binding="{Binding Stage}"/>
                        <DataGridTextColumn Header="Method" Binding="{Binding Method}"/>
                        <DataGridTextColumn Header="DataRequest" Binding="{Binding DataRequest}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="Output" Binding="{Binding Output}" Width="*">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextWrapping" Value="Wrap"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn Header="DataType" Binding="{Binding DataTypeMiddleware}"/>
                        <DataGridTextColumn Header="ByteSize" Binding="{Binding ByteSize}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Run Grader" Command="{Binding RunGraderCommand}" Width="120" Height="30" Margin="5"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" Width="100" Height="30" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>